{% extends 'base.j2' %}

{% block head %}
{{ super() }}
<link rel="stylesheet" href="{{ url_for('static', filename='style/admin.css') }}" />
{% endblock %}

{% block body %}
<div class="admin-content">
    <div class="options-list">
        <div id="userDisplay">
            Logged in as {{ session["username"] }}
        </div>
        <ul>
            {% for section_name, fragment in admin_sections %}
            <a href="#{{fragment}}">
                <li
                    class="hoverable{% if loop.first %} options-list-top{% elif loop.last %} options-list-bottom{% endif %}">
                    {{section_name}}
                </li>
            </a>
            {% endfor %}
        </ul>
    </div>
    <div id="adminDisplay">
    </div>
</div>
<script src="{{ url_for('static', filename='js/admin_panels.js') }}"></script>
{% endblock %}