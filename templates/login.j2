{% extends 'base.j2' %}

{% block head %}
{{ super() }}
<link rel="stylesheet" href="{{ url_for('static', filename='style/admin.css') }}" />
{% endblock %}

{% block body %}
<form method="post" action="/auth/login{% if next %}?next={{ next }}{% endif %}">
    <label>Username:</label>
    <br>
    <input type="text" name="u">
    <br>
    <label>Password:</label>
    <br>
    <input type="password" name="p">
    <br>
    <br>
    <input type="submit" class="item-btn color-hoverable" title="Login" value="Login">
</form>
{% if error_message %}
<span>{{ error_message }}</span>
{% endif %}
{% endblock %}